[Unit]
Description=<%= description %>
After=network.target

[Service]
Type=<%= type %>
TimeoutSec=120
User=<%= user %>
Group=<%= user %>

SyslogIdentifier=<%= conf_name %>
<%= "PIDFile=#{pidfile_path}" unless pidfile_path.nil? %>

WorkingDirectory=<%= working_directory.p.to_s %>
ExecStart=<%= command %>
Restart=always

[Install]
WantedBy=multi-user.target
