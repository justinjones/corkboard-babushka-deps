  listen <%= listen_host %>:<%= listen_port %>;
  server_name benhoskin.gs www.benhoskin.gs www.ben.hoskings.net;
  #server_name www.ben.hoskings.net;

  return 301 http://ben.hoskings.net$request_uri;
