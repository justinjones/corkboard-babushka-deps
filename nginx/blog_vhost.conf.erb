server {
  listen <%= listen_host %>:<%= listen_port %>;
  server_name ben.hoskings.net;

  root /srv/http/ben.hoskings.net/current/public;

  #rewrite ^/(\d+)\-(\d+)\-(\d+)\-(.*)$ /$1/$2/$3/$4 permanent;
  rewrite ^/(\d+)/(\d+)/(\d+)/(.*)$ /$1-$2-$3-$4 permanent;

  try_files $uri.html $uri $uri/ =404;

  rewrite ^(.+)/$ $1 permanent;
}
